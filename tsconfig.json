{
  "include": ["./src/js/**/*"],

  "compilerOptions": {
    "preserveWatchOutput": true,
    "incremental": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "es2020",
    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve", // Use Solid's JSX runtime
    "jsxImportSource": "solid-js", // Important for Solid's JSX handling
    "types": ["solid-js"],
  },
  "overrides": [
    {
      "files": ["./src/js/react/**/*.tsx"],
      "compilerOptions": {
        "jsx": "react" // Use React's JSX runtime
      }
    },
    {
      "files": ["./src/js/solid/**/*.tsx"],
      "compilerOptions": {
        "jsx": "preserve", // Use Solid's JSX runtime
        "jsxImportSource": "solid-js", // Important for Solid's JSX handling
        "types": ["solid-js"],

      }
    }
  ]
}
